<!-- Pagination Controls -->
<div class="pagination-controls mt-5 container flex justify-center items-center gap-4">
  <% if (currentPage > 1) { %>
    <button id="prevPage" data-page="prev" class="text-gray-600 hover:text-primary">
      <i class="fa-solid fa-chevron-left"></i>
    </button>
  <% } %>

  <% for (let i = 1; i <= totalPages; i++) { %>
    <button class="<%= i === currentPage ? 'text-primary' : 'text-gray-600 hover:text-primary' %>" data-page="<%= i %>">
      <%= i %>
    </button>
  <% } %>

  <% if (currentPage < totalPages) { %>
    <button id="nextPage" data-page="next" class="text-gray-600 hover:text-primary">
      <i class="fa-solid fa-chevron-right"></i>
    </button>
  <% } %>
</div>
