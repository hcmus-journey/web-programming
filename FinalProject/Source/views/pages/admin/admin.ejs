<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../layouts/head', { title: 'HATShop - Account' }) %>
</head>

<body>
  <%- include('../../layouts/header') %>

    <%- include('../../layouts/navbar', {isLoggedIn: isLoggedIn}) %>

      <!-- breadcrumb -->
      <div class="container py-4 flex items-center gap-3">
        <a href="/" class="text-primary text-base">
          <i class="fa-solid fa-house"></i>
        </a>
        <span class="text-sm text-gray-400">
          <i class="fa-solid fa-chevron-right"></i>
        </span>
        <p class="text-gray-600 font-medium">Dashboard</p>
      </div>
      <!-- ./breadcrumb -->

      <!-- account wrapper -->
      <div class="container grid grid-cols-11 items-start gap-4 pt-4 pb-16">
        <!-- sidebar -->
        <div class="col-span-5 lg:col-span-3">
          <div class="px-4 py-3 shadow flex items-center gap-4">
            <div class="flex-shrink-0">
              <img src="/public/assets/images/user/default-avatar.jpg" alt="profile"
                class="rounded-full w-14 h-14 border border-gray-200 p-1 object-cover" />
            </div>
            <div class="flex-grow">
              <p class="text-gray-600">Hello,</p>
              <h4 class="text-gray-800 font-medium name"> 
                <%= user.name %>
            </h4>
            </div>
          </div>

          <div class="mt-4 bg-white shadow rounded p-4 divide-y divide-gray-200 space-y-4 text-gray-600">
            <div class="space-y-1 lg:pl-8">
              <a href="#" class="relative text-primary block font-medium capitalize transition">
                <span class="hidden lg:block absolute -left-8 top-0 text-base">
                  <i class="fa-regular fa-address-card"></i>
                </span>
                Profile information
              </a>
              <a href="#" class="relative hover:text-primary block capitalize transition">
                Change password
              </a>
            </div>

            <div class="space-y-2 lg:pl-8 pt-4">
              <a href="#" class="relative hover:text-primary block font-medium capitalize transition">
                <span class="hidden lg:block absolute -left-8 top-0 text-base">
                  <i class="fa-solid fa-box-archive"></i>
                </span>
                Order history
              </a>
            </div>

            <div class="space-y-2 lg:pl-8 pt-4">
              <a href="/cart" class="relative hover:text-primary block font-medium capitalize transition">
                <span class="hidden lg:block absolute -left-8 top-0 text-base">
                  <i class="fa-solid fa-bag-shopping"></i>
                </span>
                My cart
              </a>
            </div>

            <div class="space-y-2 lg:pl-8 pt-4">
              <a href="/logout" class="relative hover:text-primary block font-medium capitalize transition">
                <span class="hidden lg:block absolute -left-8 top-0 text-base">
                  <i class="fa-solid fa-right-from-bracket"></i>
                </span>
                Logout
              </a>
            </div>
          </div>
        </div>
        <!-- ./sidebar -->

        <!-- info -->
        <div class="shadow rounded bg-white px-4 pt-6 pb-8 col-span-6 lg:col-span-8" id="profile">
          <div class="flex items-center justify-between mb-4">
            <h3 class="font-medium text-gray-800 text-lg">Admin Profile</h3>
            <a href="#" class="text-primary" id="edit-btn">Edit</a>
          </div>

          <div class="space-y-1">
            <p class="text-gray-800"><span class="font-bold">Name: </span><span class="name"><%= user.name%></span></p>
            <p class="text-gray-800"><span class="font-bold">Email: </span> <span><%= user.email%></span></p>
          </div>
        </div>

        <div class="shadow rounded bg-white px-4 pt-6 pb-8 col-span-6 lg:col-span-8 hidden" id="edit-profile">
          <form class="space-y-4 text-gray-800">
            <!-- Name -->
            <div>
              <label class="font-bold">Name:</label>
              <input type="text" id="userName" class="p-3 border border-gray-300 rounded w-3/4" 
                placeholder="Your Name" value="<%= user.name %>"
                required />
            </div>
            <!-- Submit Button -->
            <div>
              <button type="submit" class="bg-primary w-2/5 border border-primary text-white px-8 py-3 font-medium 
            rounded-md hover:bg-transparent hover:text-primary" id="apply-btn" onclick="edit()">
                Apply
              </button>
              <button type="cancel" class="bg-white w-2/5 border border-primary text-primary px-8 py-3 font-medium 
              rounded-md hover:bg-transparent hover:text-primary" id="cancel-btn">
                  Cancel
              </button>
            </div>
          </form>
        </div>
        <!-- ./info -->
      </div>
      <!-- ./account wrapper -->

      <%- include('../../layouts/footer') %>
      <script src="/public/js/Admin.js"></script>
</body>

</html>