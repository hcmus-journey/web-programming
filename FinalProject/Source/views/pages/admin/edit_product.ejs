<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../layouts/head', { title: 'HATShop - Edit Product' }) %>
  </head>

  <body>
    <!-- Header Section -->
    <%- include('../../layouts/adminHeader') %> <%-
    include('../../layouts/adminNavbar', {isLoggedIn: isLoggedIn}) %> <%-
    include('../../layouts/notification') %>

    <!-- breadcrumb -->
    <nav class="container py-4 flex items-center gap-3" aria-label="breadcrumb">
      <ol class="flex items-center gap-3">
        <li>
          <a href="/" class="text-primary text-base">
            <i class="fa-solid fa-house"></i>
          </a>
        </li>
        <li>
          <span class="text-sm text-gray-400">
            <i class="fa-solid fa-chevron-right"></i>
          </span>
        </li>
        <li>
          <a href="/admin/admin_shop" class="text-gray-600 font-medium">Shop</a>
        </li>
        <li>
          <span class="text-sm text-gray-400">
            <i class="fa-solid fa-chevron-right"></i>
          </span>
        </li>
        <li>
          <p class="text-gray-600 font-medium">Edit product</p>
        </li>
      </ol>
    </nav>
    <!-- ./breadcrumb -->

    <!-- Edit Product -->
    <div class="container py-16">
      <div class="max-w-3xl mx-auto shadow px-6 py-7 rounded overflow-hidden">
        <h2 class="text-2xl uppercase font-medium mb-1">Edit Product</h2>
        <p class="text-gray-600 mb-6 text-sm">Edit details of the product</p>
        <form
          action="/edit_product/123"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="space-y-4">
            <!-- Product Name -->
            <div>
              <label for="name" class="text-gray-600 mb-2 block"
                >Product Name</label
              >
              <input
                type="text"
                name="name"
                id="name"
                value="<%= product.product_name || '' %>"
                class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400"
                required
              />
            </div>

            <!-- Category -->
            <div>
              <label for="category" class="text-gray-600 mb-2 block"
                >Category</label
              >
              <select
                name="category"
                id="category"
                class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary"
              >
                <option value="<%= product.category.category_name %>" selected>
                  <%= product.category.category_name %>
                </option>
                <% categories .filter(category => category.category_name !==
                product.category.category_name) .forEach(category => { %>
                <option value="<%= category.category_name %>">
                  <%= category.category_name %>
                </option>
                <% }); %>
              </select>
            </div>

            <!-- Quantity -->
            <div>
              <label for="quantity" class="text-gray-600 mb-2 block"
                >Quantity</label
              >
              <input
                type="number"
                name="quantity"
                id="quantity"
                value="10"
                class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400"
                min="1"
                required
              />
            </div>

            <!-- Manufacturer -->
            <div>
              <label for="category" class="text-gray-600 mb-2 block"
                >Manufacturer</label
              >
              <select
                name="category"
                id="category"
                class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary"
              >
                <option
                  value="<%= product.manufacturer.manufacturer_name %>"
                  selected
                >
                  <%= product.manufacturer.manufacturer_name %>
                </option>
                <% manufacturers .filter(manufacturer =>
                manufacturer.manufacturer_name !==
                product.manufacturer.manufacturer_name) .forEach(manufacturer =>
                { %>
                <option value="<%= manufacturer.manufacturer_name %>">
                  <%= manufacturer.manufacturer_name %>
                </option>
                <% }); %>
              </select>
            </div>

            <!-- Detail -->
            <div>
              <label for="detail" class="text-gray-600 mb-2 block"
                >Product Detail</label
              >
              <textarea
                name="detail"
                id="detail"
                rows="4"
                class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400"
                required
              >
<%= product.detail %></textarea
              >
            </div>

            <!-- Images -->
            <div>
              <label for="images" class="text-gray-600 mb-2 block"
                >Product Images</label
              >
              <input
                type="file"
                name="images"
                id="images"
                multiple
                accept="image/*"
                class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400"
              />
              <p class="text-sm text-gray-500 mt-2">
                Maximum 10 images allowed.
              </p>
            </div>
          </div>

          <div class="mt-6 flex justify-center">
            <button
              type="submit"
              class="w-44 py-2 text-center text-white bg-primary border border-primary rounded hover:bg-transparent hover:text-primary transition uppercase font-roboto font-medium"
            >
              Save Changes
            </button>
          </div>
        </form>
      </div>
    </div>
    <!-- ./Edit Product -->

    <%- include('../../layouts/footer') %>
  </body>
</html>
