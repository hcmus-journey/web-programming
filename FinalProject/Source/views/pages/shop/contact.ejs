<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../layouts/head', { title: 'HATShop - Contact us' }) %>
</head>

<body>
  <%- include('../../layouts/header') %>

    <%- include('../../layouts/navbar') %>

      <!-- Contact -->
      <!-- Contact Us Section -->
      <div class="container grid lg:grid-cols-7 xl:grid-cols-8">
        <div class="container lg:col-span-4 xl:col-span-5 flex flex-col justify-center mt-20">
          <h1 class="text-3xl font-semibold mb-4">
            Contact <span class="text-primary">HAT</span><span class="text-gray-800">Shop</span>
          </h1>
          <!-- Left Column: Contact Information -->
          <div class="space-y-6">
            <!-- Email -->
            <p class="text-gray-600">
              If you have any questions, please feel free to contact us. We will get back to you as soon as possible.
            </p>
            <div class="flex items-center text-gray-700">
              <i class="fa-solid fa-envelope mr-3 text-primary text-xl"></i>
              <p class="text-gray-600">
                <a href="mailto:hat.shop@gmail.com" class="hatshopEmail hover:underline">hat.shop@gmail.com</a>
              </p>
            </div>

            <!-- Fanpage -->
            <div class="flex items-center text-gray-700">
              <i class="fa-brands fa-facebook-square mr-3 text-primary text-xl"></i>
              <a class="hatshopFanpage text-gray-600 ">+84 399-222-067</a>
            </div>

            <!-- Phone -->
            <div class="flex items-center text-gray-700">
              <i class="fa-solid fa-phone mr-3 text-primary text-xl"></i>
              <p class="hatshopPhoneNumber text-gray-600 ">+84 399-222-067</p>
            </div>
          </div>
        </div>
        <!-- Contact Form -->
        <div class="container shadow-2xl rounded-lg lg:col-span-3 mt-20 p-5">
          <h2 class="text-xl font-semibold text-gray-800 mb-5">
            Send us a Message
          </h2>
          <form id="contactForm" class="space-y-4">
            <!-- Name -->
            <div>
              <input type="text" id="userName" class="w-full p-3 border border-gray-300 rounded" placeholder="Your Name"
                required />
            </div>

            <!-- Email -->
            <div>
              <input type="email" id="userEmail" class="w-full p-3 border border-gray-300 rounded"
                placeholder="Your Email" required />
            </div>
            <!-- Message -->
            <div>
              <textarea id="message" class="w-full p-3 h-32 border border-gray-300 rounded resize-none"
                placeholder="Your Message" required></textarea>
            </div>

            <!-- Submit Button -->
            <div>
              <button type="submit" class="bg-primary w-full border border-primary text-white px-8 py-3 font-medium 
            rounded-md hover:bg-transparent hover:text-primary">
                Send Message
              </button>
            </div>
          </form>
        </div>
        <!-- ./Contact Form -->
      </div>
      </div>
      <!-- ./Contact -->

      <div class="container grid lg:grid-cols-2 mt-20 bg-slate-100 rounded-lg p-10">
        <div class="">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.6464473085556!2d106.6826443!3d10.7626228!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f1ba8d5b2d1%3A0x9e389a1b4cf41106!2s227%20Nguyen%20Van%20Cu%2C%20Ward%204%2C%20District%205%2C%20Ho%20Chi%20Minh%20City%2C%20Vietnam!5e0!3m2!1sen!2s!4v1600000000000!5m2!1sen!2s"
            width="100%" height="400" class="rounded-lg border border-gray-300" allowfullscreen=""
            loading="lazy"></iframe>
        </div>
        <!-- Address -->
        <div class=" text-gray-700 p-10">
          <p class="text-xl font-semibold mb-4">
            Our location
          </p>
          <div class="flex">
            <i class="fa-solid fa-map-marker-alt mr-3 text-primary text-xl"></i>
            <p class="hatshopAddress text-gray-600 ">
              227 Nguyen Van Cu, Ward 4, District 5, Ho Chi Minh City, Vietnam
            </p>
          </div>
        </div>
      </div>

      <%- include('../../layouts/footer') %>
</body>

</html>