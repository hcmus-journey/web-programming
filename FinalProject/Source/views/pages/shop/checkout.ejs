<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../layouts/head', { title: 'HATShop - Checkout' }) %>
</head>

<body>
  <%- include('../../layouts/header') %>

  <%- include('../../layouts/navbar', {isLoggedIn: isLoggedIn}) %>

  <!-- breadcrumb -->
  <div class="container py-4 flex items-center gap-3">
    <a href="/" class="text-primary text-base">
      <i class="fa-solid fa-house"></i>
    </a>
    <span class="text-sm text-gray-400">
      <i class="fa-solid fa-chevron-right"></i>
    </span>
    <p class="text-gray-600 font-medium">Checkout</p>
  </div>
  <!-- ./breadcrumb -->

  <!-- wrapper -->
  <div class="container grid lg:grid-cols-12 items-start pb-16 pt-4 gap-6">
    <div class="lg:col-span-6 border border-gray-200 p-4 rounded">
      <h3 class="text-lg font-medium capitalize mb-4">Checkout</h3>
      <div class="space-y-4">
        <div>
          <label for="full-name" class="text-gray-600">Full Name <span class="text-primary">*</span></label>
          <input type="text" name="full-name" id="full-name" class="input-box" required />
        </div>
        <div>
          <label for="address" class="text-gray-600">Address <span class="text-primary">*</span></label>
          <input type="text" name="address" id="address" class="input-box" required />
        </div>
        <div>
          <label for="city" class="text-gray-600">City <span class="text-primary">*</span></label>
          <input type="text" name="city" id="city" class="input-box" required />
        </div>
        <div>
          <label for="region" class="text-gray-600">Country <span class="text-primary">*</span></label>
          <input type="text" name="region" id="region" class="input-box" required />
        </div>
        <div>
          <label for="phone" class="text-gray-600">Phone number <span class="text-primary">*</span></label>
          <input type="text" name="phone" id="phone" class="input-box" required />
        </div>
      </div>
    </div>

    <div class="lg:col-span-6 border border-gray-200 p-6 rounded-lg shadow-md">
      <h4 class="text-lg font-medium capitalize mb-4">Order Summary</h4>
      <div class="w-full max-w-4xl">
        <table class="w-full table-auto text-gray-800">
          <thead>
            <tr>
              <th class="py-2 px-4 border-b font-medium text-left">No.</th>
              <th class="py-2 px-4 border-b font-medium text-left">Product</th>
              <th class="py-2 px-4 border-b font-medium text-left">Quantity</th>
              <th class="py-2 px-4 border-b font-medium text-left">Price</th>
              <th class="py-2 px-4 border-b font-medium text-right">Total</th>
            </tr>
          </thead> 
          <tbody>
            <% cart.forEach((item, index) => { %>
              <tr>
                <td class="py-2 px-4 border-b"><%= index + 1 %></td>
                <td class="py-2 px-4 border-b"><%= item.product.product_name %></td>
                <td class="py-2 px-4 border-b"><%= item.quantity %></td>
                <td class="py-2 px-4 border-b text-right">$<%= item.product.price.toFixed(2) %></td>
                <td class="py-2 px-4 border-b text-right">$<%= (item.quantity * item.product.price).toFixed(2) %></td>
              </tr>
            <% }); %>
          </tbody>          
        </table>
      </div>

      <div class="flex justify-between mt-2">
        <p class="py-2 px-4 text-gray-800">Subtotal</p>
        <p class="py-2 px-4 text-gray-800">$<%= subtotal.toFixed(2) %></p>
      </div>
      <div class="flex justify-between">
        <p class="py-2 px-4 text-gray-800">Shipping Fee</p>
        <p class="py-2 px-4 text-gray-800">$<%= shippingFee %></p>
      </div>
      <div class="flex justify-between">
        <p class="py-2 px-4 text-gray-800 font-medium">Total</p>
        <p class="py-2 px-4 text-gray-800 font-medium">$<%= subtotal.toFixed(2) + shippingFee %></p>
      </div>

      <a href="#"
        class="block w-full py-3 mt-4 text-center text-white bg-primary border border-primary rounded-md hover:bg-transparent hover:text-primary transition duration-200 font-medium">
        Place Order
      </a>
    </div>
  </div>
  <!-- ./wrapper -->

  <%- include('../../layouts/footer') %>
</body>

</html>
